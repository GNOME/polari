{
    "rules": {
        "arrow-spacing": "error",
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "camelcase": [
            "error",
            {
                "properties": "never",
                "allow": ["^vfunc_"]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "ignoredNodes": [
                    "CallExpression[callee.object.name=GObject][callee.property.name=registerClass] > ClassExpression:first-child"
                ],
                "MemberExpression": "off"
            }
        ],
        "key-spacing": [
            "error",
            {
                "mode": "minimum",
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "no-restricted-properties": [
            "error",
            {
                "object": "Lang",
                "property": "bind",
                "message": "Please use arrow notation or Function.prototype.bind()."
            },
            {
                "object": "Lang",
                "property": "Class",
                "message": "Please use ES6 classes."
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "_$"
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-arrow-callback": "error"
    },
    "globals": {
        "debug": false,
        "info": false,
        "warning": false,
        "critical": false,
        "error": false,
        "pkg": false,
        "_": false,
        "C_": false,
        "N_": false,
        "ngettext": false
    }
}
